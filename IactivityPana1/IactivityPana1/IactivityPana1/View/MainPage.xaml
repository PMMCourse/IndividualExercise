<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IactivityPana1"
             x:Class="IactivityPana1.MainPage">

    <StackLayout>
        <Label Text="Mis posts" XAlign="Center"></Label>
        <SearchBar Margin="0,0,20,0" Placeholder="Buscar post" x:Name="busqueda" TextChanged="Busqueda_TextChanged"></SearchBar>
        <ListView x:Name="lista" ItemTapped="MainListView_ItemTapped" ItemsSource="{Binding Items}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding idtitle}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
