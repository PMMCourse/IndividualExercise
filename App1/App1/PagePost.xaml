<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.PagePost">
    
    <ContentPage.Content>
        <StackLayout>
            <!--Los componentes que tendra la pantalla-->
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Label x:Name="user" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label x:Name="id" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </StackLayout>

            <BoxView BackgroundColor="red" HeightRequest="1" ></BoxView>
            <StackLayout>
                <Label x:Name="title" FontSize="Large" HorizontalOptions="Center" FontFamily="bold" VerticalOptions="Center"/>
                <Label x:Name="body" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
            </StackLayout>
            <BoxView BackgroundColor="red" HeightRequest="1" ></BoxView>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand">
                <Entry x:Name="entry" Placeholder="Introduzca un comentario" VerticalOptions="End" ></Entry>
                <Button Text="Comentar" Clicked="buttonClick" VerticalOptions="End"></Button>
            </StackLayout>

        </StackLayout>


        </ContentPage.Content>
</ContentPage>